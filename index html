    <script>
        // Navigation and progress tracking
        let completedSections = new Set();
        let currentSection = 'welcome';
        let quizAnswers = [];
        let quizScore = 0;

        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        // Show section and update navigation
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });

            // Show selected section
            document.getElementById(sectionId).classList.add('active');

            // Update navigation
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');

            // Mark previous section as completed
            if (currentSection && currentSection !== sectionId) {
                completedSections.add(currentSection);
            }
            currentSection = sectionId;

            // Update progress
            updateProgress();

            // Close sidebar on mobile
            if (window.innerWidth <= 768) {
                document.getElementById('sidebar').classList.remove('open');
            }

            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Update progress bar
        function updateProgress() {
            const totalSections = 8;
            const progress = (completedSections.size / totalSections) * 100;
            document.getElementById('progress-fill').style.width = progress + '%';
        }

        // Handle quiz answers
        function checkAnswer(element, isCorrect) {
            const options = element.parentNode.querySelectorAll('li');
            options.forEach(option => {
                option.style.pointerEvents = 'none';
                if (option === element) {
                    option.classList.add(isCorrect ? 'correct' : 'incorrect');
                } else if (isCorrect === false && option.textContent.includes('❌')) {
                    option.classList.add('correct');
                }
            });
        }

        // Handle quiz questions
        function checkQuizAnswer(element, isCorrect) {
            const questionDiv = element.closest('.quiz-question');
            const options = questionDiv.querySelectorAll('li');
            
            // Disable all options
            options.forEach(option => {
                option.style.pointerEvents = 'none';
                if (option === element) {
                    option.classList.add(isCorrect ? 'correct' : 'incorrect');
                    quizAnswers.push(isCorrect);
                    if (isCorrect) quizScore++;
                }
            });

            // Show correct answer if wrong answer was selected
            if (!isCorrect) {
                options.forEach(option => {
                    if (option.onclick.toString().includes('true')) {
                        option.classList.add('correct');
                    }
                });
            }

            // Check if all questions are answered
            if (quizAnswers.length === 4) {
                document.getElementById('submit-quiz').style.display = 'inline-block';
            }
        }

        // Submit quiz and show results
        function submitQuiz() {
            const percentage = (quizScore / 4) * 100;
            const resultsDiv = document.getElementById('quiz-results');
            const titleElement = document.getElementById('results-title');
            const messageElement = document.getElementById('results-message');
            const progressElement = document.getElementById('quiz-progress');

            let title, message, color;
            
            if (percentage >= 80) {
                title = '🎉 Excellent Work!';
                message = `You scored ${quizScore}/4 (${percentage}%). You have a strong understanding of AI foundations for K-12 education.`;
                color = '#27ae60';
            } else if (percentage >= 60) {
                title = '👍 Good Job!';
                message = `You scored ${quizScore}/4 (${percentage}%). Consider reviewing the areas where you missed questions.`;
                color = '#f39c12';
            } else {
                title = '📚 Keep Learning!';
                message = `You scored ${quizScore}/4 (${percentage}%). We recommend reviewing the course materials and retaking the quiz.`;
                color = '#e74c3c';
            }

            titleElement.textContent = title;
            messageElement.textContent = message;
            progressElement.style.width = percentage + '%';
            progressElement.style.background = `linear-gradient(90deg, ${color}, ${color}dd)`;
            
            resultsDiv.style.display = 'block';
            document.getElementById('submit-quiz').style.display = 'none';
        }

        // Save assessment
        function recordAssessment() {
            const selected = document.querySelector('input[name="knowledge"]:checked');
            if (selected) {
                alert(`Assessment recorded: ${selected.value.charAt(0).toUpperCase() + selected.value.slice(1)} level`);
            } else {
                alert('Please select your current knowledge level.');
            }
        }

        // Analyze prompt
        function analyzePrompt() {
            const promptText = document.querySelector('#applications textarea').value.trim();
            const feedbackDiv = document.getElementById('prompt-feedback');
            const feedbackText = document.getElementById('feedback-text');

            if (!promptText) {
                feedbackText.textContent = 'Please write a prompt first.';
                feedbackDiv.style.display = 'block';
                return;
            }

            let feedback = '✅ Prompt Analysis:\n\n';
            let score = 0;

            // Check for specificity
            if (promptText.length > 50) {
                feedback += '• Good length and detail\n';
                score++;
            } else {
                feedback += '• Consider adding more specific details\n';
            }

            // Check for context
            if (promptText.toLowerCase().includes('student') || promptText.toLowerCase().includes('grade') || promptText.toLowerCase().includes('subject')) {
                feedback += '• Includes educational context\n';
                score++;
            } else {
                feedback += '• Consider adding educational context (grade level, subject, etc.)\n';
            }

            // Check for desired format
            if (promptText.toLowerCase().includes('list') || promptText.toLowerCase().includes('question') || promptText.toLowerCase().includes('activity')) {
                feedback += '• Specifies desired format\n';
                score++;
            } else {
                feedback += '• Consider specifying the desired format or output type\n';
            }

            feedback += `\nOverall Score: ${score}/3 `;
            feedback += score >= 2 ? '(Good prompt!)' : '(Could be improved)';

            feedbackText.textContent = feedback;
            feedbackDiv.style.display = 'block';
        }

        // Save functions (placeholder implementations)
        function saveReflection() {
            alert('Reflection saved! Thank you for your thoughtful response.');
        }

        function saveReflections() {
            alert('Reflections saved! These will help guide your AI implementation journey.');
        }

        function saveActionPlan() {
            alert('Action plan saved! We recommend sharing this with your instructional coach or supervisor.');
        }

        // Generate certificate
        function generateCertificate() {
            const userName = prompt('Enter your name for the certificate:') || 'Participant';
            const date = new Date().toLocaleDateString();
            
            alert(`🎓 Certificate of Completion\n\nThis certifies that ${userName} has successfully completed the AI Foundations for K-12 Educators training on ${date}.\n\n(In a real implementation, this would generate a downloadable PDF certificate)`);
        }

        // Keyboard navigation support
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.getElementById('sidebar').classList.remove('open');
            }
        });

        // Handle nav links with keyboard
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    this.click();
                }
            });
        });

        // Auto-close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            
            if (!sidebar.contains(e.target) && e.target !== toggle && window.innerWidth <= 768) {
                sidebar.classList.remove('open');
            }
        });

        // Initialize progress on page load
        updateProgress();
    </script>
</body>
</html>
